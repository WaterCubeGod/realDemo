<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.group.dao.UserDao">
<!--    //通过账号id和密码来查询某一行-->
    <select id="selectByUsernameAndPassword" resultType="User">
        SELECT id,password,username,type FROM user WHERE id = ${id} AND password = ${password};
    </select>
<!--    //插入一行-->
    <select id="insertUser" resultType="java.lang.Integer">
        INSERT INTO user(username,password,type) VALUES (${username},${password},${type});
    </select>
<!--    //删除一行:必须知道对应的id和密码-->
    <delete id="deleteUser" >
        DELETE FROM user WHERE id = ${id} AND password = ${password};
    </delete>
<!--    //查找10行数据-->
    <select id="selectAllUser">
        SELECT id,username,type FROM user WHERE id > ${count} limit 10
    </select>
</mapper>