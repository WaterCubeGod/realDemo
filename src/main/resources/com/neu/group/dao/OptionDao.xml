<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.group.dao.OptionDao">

    <insert id="addChoice">
        insert into choice values(#{qnId},#{qId},#{oId},#{content})
    </insert>

    <select id="selectAllByQId" resultType="Option">
        select qn_id as anId, q_id as qId, content
        from choice where qn_id = #{qnId} and q_id = #{qId} order by o_id
    </select>

</mapper>